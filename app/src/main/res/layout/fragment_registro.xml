<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo y Titutlo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logoestrellas" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:src="@drawable/nombreapp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@color/grisOscuro" />
        </LinearLayout>

        <!-- Instruciones de registro -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/txt_registro"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="16sp" />

        <!-- Nombre Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/usuario" />

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/nombreRE"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Apellido Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/usuario" />

            <EditText
                android:id="@+id/editTextApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/apellidoRE"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Teléfono Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/telefono" />

            <EditText
                android:id="@+id/editTextTelefono"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/tel_fonoRE"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Correo Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/editTextCorreo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/correoRE"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Confirmar Correo Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/editTextConfirmarCorreo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/confirmar_correoRE"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Contraseña Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/contrasena" />

            <EditText
                android:id="@+id/editTextContrasena"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/contrasenaRE"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Confirmar Contraseña Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/contrasena" />

            <EditText
                android:id="@+id/editTextConfirmarContrasena"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/confirmar_contrase_aRE"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>


        <!-- Aceptar terminos y condiciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewCondiciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/TYC"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- registro Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/azulOscuro"
            android:padding="12dp"
            android:text="@string/registro"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/grisClaro"
            app:strokeWidth="2dp" />


        <!-- Ya tienes cuenta... -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ya_tienes_una_cuenta"
                android:textColor="@color/negro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewResetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/iniciar_sesi_n"
                android:textColor="@color/azulClaro"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Google Login -->
        <Button
            android:id="@+id/buttonGoogleLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@android:color/white"
            android:text="@string/inicia_sesi_n_con_google"
            android:textColor="@color/grisOscuro"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/google"
            app:iconSize="30dp"
            app:iconTint="@null"
            app:strokeColor="@color/grisOscuro"
            app:strokeWidth="2dp" />


        <!-- Register Link -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_n_no_tienes_una_cuenta"
                android:textColor="@color/negro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/reg_strate_aqu"
                android:textColor="@color/azulClaro"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
