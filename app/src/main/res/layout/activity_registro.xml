<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisClaro"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Botón "Volver al inicio" estilizado -->
        <LinearLayout
            android:id="@+id/btnVolverInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/boton_volver_al_inicio"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/callback"
                app:tint="@color/azulOscuro" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volver_al_inicio"
                android:textColor="@color/azulOscuro"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- Logo y Titulo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logoestrellas" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:src="@drawable/nombreapp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="40dp"
                android:background="@color/grisOscuro" />
        </LinearLayout>

        <!-- Instruciones de registro -->

        <!-- Nombre Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/registrate_con_tus_datos_personales_recuerda_que_todos_los_datos_marcados_con_son_obligatorios"
            android:textAlignment="center"
            android:textColor="@color/negro"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/usuario" />

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/nombreRE"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Apellido Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/usuario" />

            <EditText
                android:id="@+id/editTextApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/apellidoRE"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Teléfono Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/telefono" />

            <EditText
                android:id="@+id/editTextTelefono"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/tel_fonoRE"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Correo Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/editTextCorreo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/correoRE"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Confirmar Correo Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/editTextConfirmarCorreo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/confirmar_correoRE"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Contraseña Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/contrasena" />

            <EditText
                android:id="@+id/editTextContrasena"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/contrase_a"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- Confirmar Contraseña Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="46dp"
                android:layout_height="33dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/contrasena" />

            <EditText
                android:id="@+id/editTextConfirmarContrasena"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/drawable_input"
                android:hint="@string/confirmar_contrase_a"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="16sp" />
        </LinearLayout>


        <!-- Aceptar terminos y condiciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxAceptar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewCondiciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/TYC"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- registro Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/azulOscuro"
            android:padding="12dp"
            android:text="@string/registro"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            app:cornerRadius="10dp"
            app:strokeColor="@color/grisClaro"
            app:strokeWidth="2dp" />


        <!-- Ya tienes cuenta... -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ya_tienes_una_cuenta"
                android:textColor="@color/negro"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_loginRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/iniciar_sesi_n"
                android:textColor="@color/azulClaro"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
