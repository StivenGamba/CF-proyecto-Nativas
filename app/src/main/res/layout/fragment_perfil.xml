<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tarjeta con la informacion personal -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grisClaro"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/imguser" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nombre_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/grisOscuro"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tv_correo_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/grisOscuro"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_celular_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/a_adir_n_mero_de_celular"
                        android:textColor="@color/grisOscuro"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_direccion_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/agrega_una_direcci_n_de_entrega"
                        android:textColor="@color/grisOscuro"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <!-- BTN: Información Personal -->
        <LinearLayout
            android:id="@+id/btn_info_personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:background="@color/grisClaro"
        android:clickable="true"
        android:focusable="true"
            android:elevation="4dp"
            >

        <ImageView
            android:id="@+id/img_icono_info_personal"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:src="@drawable/editprofile" />


        <View
            android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grisMedio"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mi_informaci_n_personal"
            android:textColor="@color/grisOscuro"
            android:textSize="19sp" />

        <!-- Optional: Chevron icon at the end -->
            <ImageView
                android:layout_width="23dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/chevron"
                app:tint="@color/grisMedio" />

    </LinearLayout>

        <!-- BTN: Información de la Cuenta -->
        <LinearLayout
            android:id="@+id/btn_info_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@color/grisClaro"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10sp"
            android:elevation="4dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:src="@drawable/editprofile" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grisMedio"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/informacion_de_la_cuenta"
                android:textColor="@color/grisOscuro"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/chevron"
                app:tint="@color/grisMedio" />
        </LinearLayout>




        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grisMedio"
            android:layout_marginTop="16dp"
            android:layout_marginVertical="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- BTN: Medios de Pago -->
        <LinearLayout
            android:id="@+id/btn_medios_pago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@color/grisClaro"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:src="@drawable/edit" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grisMedio"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:src="@drawable/atmcard"
                android:layout_marginEnd="8sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medios_de_pago"
                android:textColor="@color/grisOscuro"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/chevron"
                app:tint="@color/grisMedio" />
        </LinearLayout>

        <!-- BTN: Dirección de Entrega -->
        <LinearLayout
            android:id="@+id/btn_direccion_entrega_opcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@color/grisClaro"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:src="@drawable/edit" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grisMedio"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/direccion_de_entrega"
                android:textColor="@color/grisOscuro"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/chevron"
                app:tint="@color/grisMedio" />
        </LinearLayout>


        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grisMedio"
            android:layout_marginTop="16dp"
            android:layout_marginVertical="16dp"
            android:layout_marginBottom="8dp"/>

        <!-- BTN: Seguridad -->
        <LinearLayout
            android:id="@+id/btn_seguridad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@color/grisClaro"
            android:clickable="true"
            android:focusable="true"
            android:elevation="4dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:src="@drawable/cybersecurity" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grisMedio"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/seguridad"
                android:textColor="@color/grisOscuro"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/chevron"
                app:tint="@color/grisMedio" />
        </LinearLayout>


        <!-- BTN: Privacidad (Ejemplo de botón adicional) -->
        <LinearLayout
            android:id="@+id/btn_privacidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:background="@color/grisClaro"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="10sp"
            android:elevation="4dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:src="@drawable/verified" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grisMedio"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/privacidad"
                android:textColor="@color/grisOscuro"
                android:textSize="19sp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/chevron"
                app:tint="@color/grisMedio" />
        </LinearLayout>


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="@color/azulOscuro"
            android:strokeColor="@color/grisOscuro"
            android:text="@string/iniciar_sesi_n"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="40sp"
            android:layout_marginLeft="80sp"
            android:layout_marginRight="80sp"/>
        <!-- lOG OUT Button -->
        <Button
            android:id="@+id/btnlogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:backgroundTint="@color/azulOscuro"
            android:strokeColor="@color/grisOscuro"
            android:text="@string/cerrar_sesi_n"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="40sp"
            android:layout_marginLeft="80sp"
            android:layout_marginRight="80sp"/>



    </LinearLayout>
</ScrollView>